
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>IT Helpdesk</title>
    <link href="http://rtt-glossary.azurewebsites.net/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="http://rtt-glossary.azurewebsites.net/Content/dist/css/AdminLTE.min.css" rel="stylesheet">
    <link href="http://rtt-glossary.azurewebsites.net/Content/dist/css/skins/_all-skins.min.css" rel="stylesheet">
    <link href="http://rtt-glossary.azurewebsites.net/Content/plugins/iCheck/flat/blue.css" rel="stylesheet">
    <link href="http://rtt-glossary.azurewebsites.net/Content/plugins/morris/morris.css" rel="stylesheet">
    <link href="http://rtt-glossary.azurewebsites.net/Content/plugins/jvectormap/jquery-jvectormap-1.2.2.css" rel="stylesheet">
    <link href="http://rtt-glossary.azurewebsites.net/Content/plugins/datepicker/datepicker3.css" rel="stylesheet">
    <link href="http://rtt-glossary.azurewebsites.net/Content/plugins/daterangepicker/daterangepicker-bs3.css" rel="stylesheet">
    <link href="http://rtt-glossary.azurewebsites.net/Content/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css" rel="stylesheet">
    <link href="http://rtt-glossary.azurewebsites.net/Content/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
</head>
<body class="hold-transition skin-blue sidebar-mini">
    @{
        string ShowMessage = String.Empty;
        int er = 0;
            er = (ViewBag.err != null) ? Convert.ToInt32(ViewBag.err) : 0;

             if (er == 1) { ShowMessage = "Oh snap! Invalid User Id or Password, Please Try Again";            }
        else if (er == 2) { ShowMessage = "Good that you have been here for so long! now please login again";  }
        else if (er == 3) { ShowMessage = "Your User is found in the system but something went wrong";         }
        else if (er == 4) { ShowMessage = "Your Password has changed since you last logged in";                }
    }



    <script language="JavaScript">
            function CheckVals() {
                var tuid = document.getElementById("userid");
                if (tuid.value == "") {
                    alert("Please Enter User Id");
                    return false;
                }

                var tpwd = document.getElementById("txtpass");
                if (tpwd.value == "") {
                    alert("Please Enter Password");
                    return false;
                }

                document.getElementById("dv_refresh_spin").style.display = "block";
                //tuid.setAttribute("disabled", true);
                //tpwd.setAttribute("disabled", true);
                return true;
            }
    </script>

    @using (Html.BeginForm("process", "Login", FormMethod.Post, new { onsubmit = "return CheckVals();" }))
    {
        @Html.AntiForgeryToken()
            <!-- Form Body Starts here -->
        if (ShowMessage != "")
        {
            <div class="alert alert-danger">@ShowMessage</div>
        }
        <input type="hidden" name="hdnid" value="@ViewBag.tid" />
        <div class="box box-info" style="width:40%; margin: 100px auto;">
            <div class="box-header">
                <i class="fa fa-lock"></i>
                <h3 class="box-title">login Screen</h3>

                <!-- tools box -->
                <div class="col-xs-11 pad margin no-print">
                    <div class="callout callout-success" style="margin-bottom: 0!important;">                        
                        Please Use your Business Account for Login
                    </div>
                </div>

                <div class="pull-right box-tools">
                    <button class="btn btn-info btn-sm" data-widget="remove" data-toggle="tooltip" title="Remove"><i class="fa fa-times"></i></button>
                </div>
                <!-- /. tools -->
            </div>

            <div class="box-body">
                <div class="form-group">
                    <input type="text" class="form-control" name="userid" id="userid" placeholder="User Id">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="txtpass" id="txtpass" placeholder="Password">
                </div>
            </div>

            <div id="dv_refresh_spin" class="box-body" style="display:none;">
                <div class="overlay">
                    <i class="fa fa-refresh fa-spin"></i>
                </div>
            </div>

            <div class="box-footer clearfix">
                <button type="submit" name="submit" class="pull-right btn btn-default " id="btnsubmit">
                    Login <i class="fa fa-key"></i>
                </button>
            </div>
        </div>
            <!-- Form Body Ends here -->
    }

    <script src="https://code.jquery.com/jquery-2.2.4.min.js" integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44=" crossorigin="anonymous"></script>

    <script src="http://rtt-glossary.azurewebsites.net/Content/bootstrap/js/bootstrap.min.js">                          </script>
    <script src="http://rtt-glossary.azurewebsites.net/Content/plugins/morris/morris.min.js">                           </script>
    <script src="http://rtt-glossary.azurewebsites.net/Content/plugins/sparkline/jquery.sparkline.min.js">              </script>
    <script src="http://rtt-glossary.azurewebsites.net/Content/plugins/jvectormap/jquery-jvectormap-1.2.2.min.js">      </script>
    <script src="http://rtt-glossary.azurewebsites.net/Content/plugins/jvectormap/jquery-jvectormap-world-mill-en.js">  </script>
    <script src="http://rtt-glossary.azurewebsites.net/Content/plugins/knob/jquery.knob.js">                            </script>

    <script src="http://rtt-glossary.azurewebsites.net/Content/plugins/daterangepicker/daterangepicker.js">                     </script>
    <script src="http://rtt-glossary.azurewebsites.net/Content/plugins/datepicker/bootstrap-datepicker.js">                     </script>
    <script src="http://rtt-glossary.azurewebsites.net/Content/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js">    </script>
    <script src="http://rtt-glossary.azurewebsites.net/Content/plugins/slimScroll/jquery.slimscroll.min.js">                    </script>
    <script src="http://rtt-glossary.azurewebsites.net/Content/plugins/fastclick/fastclick.min.js">                             </script>

    <script src="http://rtt-glossary.azurewebsites.net/Content/dist/js/pages/dashboard.js">                             </script>
    <script src="http://rtt-glossary.azurewebsites.net/Content/dist/js/app.min.js">                                     </script>
    <script src="http://rtt-glossary.azurewebsites.net/Content/dist/js/demo.js">                                        </script>


    <!-- ./wrapper -->
    <!-- jQuery UI 1.11.4 -->
    <script src="https://code.jquery.com/ui/1.11.4/jquery-ui.min.js"></script>
    <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
    <script>
        $.widget.bridge('uibutton', $.ui.button);
    </script>
</body>
</html>
